{
  "name": "@govuk-prototype-builder/schema",
  "version": "0.1.0",
  "description": "TypeScript types and Zod schemas for the GOV.UK Prototype Builder",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
